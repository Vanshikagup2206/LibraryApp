<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boundary"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/sp_20"
    android:layout_marginStart="@dimen/sp_20"
    android:layout_marginEnd="@dimen/sp_20"
    android:padding="@dimen/dp_32">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#EDEBEB"
        android:elevation="@dimen/sp_20"
        android:padding="@dimen/sp_20"
        app:cardCornerRadius="@dimen/sp_20">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold|italic" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:backgroundTint="#EDEBEB"
        android:elevation="@dimen/sp_20"
        android:padding="@dimen/sp_20"
        app:cardCornerRadius="@dimen/sp_20">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold|italic" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:backgroundTint="#EDEBEB"
        android:elevation="@dimen/sp_20"
        android:padding="@dimen/sp_20"
        app:cardCornerRadius="@dimen/sp_20">

        <TextView
            android:id="@+id/tvTotalBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold|italic" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:backgroundTint="#EDEBEB"
        android:layout_gravity="end"
        android:elevation="@dimen/sp_20"
        android:padding="@dimen/sp_20"
        app:cardCornerRadius="@dimen/sp_20">

        <ImageView
            android:id="@+id/imNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_gravity="end"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>