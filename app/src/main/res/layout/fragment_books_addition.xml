<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical"
    tools:context=".BooksAdditionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/book_category"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBooksCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:padding="@dimen/dp_10"
            android:text="@string/book_category"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Author Name Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_author_name"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBookAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/enter_author_name"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Book Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_book_title"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/enter_book_title"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Publisher Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_publisher"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/enter_publisher"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_language_of_book"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBookLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/enter_language_of_book"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Short Description Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_short_description"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:gravity="top|start"
            android:hint="@string/enter_short_description"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:padding="@dimen/dp_10"
            android:scrollHorizontally="false"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/insert_image_of_the_book"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <ImageView
            android:id="@+id/ivSelectedImage"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_images"
            android:textSize="@dimen/sp_20" />

        <!-- Brief Description Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/enter_brief_description"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:gravity="top|start"
            android:hint="@string/enter_brief_description"
            android:inputType="textMultiLine"
            android:maxLines="50"
            android:minLines="5"
            android:padding="@dimen/dp_10"
            android:scrollHorizontally="false"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/table_of_content"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etSrNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:gravity="top|start"
                android:hint="@string/s_no"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="5"
                android:padding="@dimen/dp_10"
                android:scrollHorizontally="false"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etTableOfContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:gravity="top|start"
                android:hint="@string/topic_name"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="5"
                android:padding="@dimen/dp_10"
                android:scrollHorizontally="false"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/etPageNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:gravity="top|start"
                android:hint="@string/pageNo"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="5"
                android:padding="@dimen/dp_10"
                android:scrollHorizontally="false"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Copies Available Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/no_of_copies_available"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCopiesAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/eg_1_2"
            android:inputType="number"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/shelf_no"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etShelfNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/shelf_no"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/book_no"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBookNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:hint="@string/book_no"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Release Date Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/release_date"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_outline"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/select_date"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/dp_8"
            android:background="@color/green" />

        <!-- Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/status"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />

            <RadioButton
                android:id="@+id/rbIssued"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/issued"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/sp_16" />
        </RadioGroup>

        <!-- Add Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_24"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:backgroundTint="@color/deep_olive"
            app:cornerRadius="16dp" />
    </LinearLayout>

</ScrollView>